{
    "schemaVersion": "1.0.0",
    "policy": "Policy-B",
    "scope": {
        "service": "backend-api",
        "environment": "prod"
    },
    "defaults": {
        "throttleProfile": "strict"
    },
    "endpoints": [
        {
            "id": "health-root",
            "method": "GET",
            "path": "/health",
            "reason": "Kubernetes/Cloud Run health check endpoint for service availability monitoring.",
            "owner": "Platform Team",
            "throttle": {
                "profile": "health"
            },
            "expiryDate": null,
            "dataClassification": "public",
            "risk": "low"
        },
        {
            "id": "health-detailed",
            "method": "GET",
            "path": "/health/detailed",
            "reason": "Operations monitoring endpoint providing detailed service health metrics.",
            "owner": "Platform Team",
            "throttle": {
                "profile": "health"
            },
            "expiryDate": null,
            "dataClassification": "public",
            "risk": "low"
        },
        {
            "id": "health-live",
            "method": "GET",
            "path": "/health/live",
            "reason": "Kubernetes liveness probe endpoint required for container orchestration.",
            "owner": "Platform Team",
            "throttle": {
                "profile": "health"
            },
            "expiryDate": null,
            "dataClassification": "public",
            "risk": "low"
        },
        {
            "id": "health-ready",
            "method": "GET",
            "path": "/health/ready",
            "reason": "Kubernetes readiness probe endpoint for traffic routing decisions.",
            "owner": "Platform Team",
            "throttle": {
                "profile": "health"
            },
            "expiryDate": null,
            "dataClassification": "public",
            "risk": "low"
        },
        {
            "id": "auth-login",
            "method": "POST",
            "path": "/auth/login",
            "reason": "User authentication entry point - must be publicly accessible for login flow.",
            "owner": "Security Team",
            "throttle": {
                "profile": "strict",
                "requestsPerMinute": 10,
                "burst": 20
            },
            "expiryDate": null,
            "dataClassification": "internal",
            "risk": "medium"
        },
        {
            "id": "auth-register",
            "method": "POST",
            "path": "/auth/register",
            "reason": "User registration endpoint for new account creation in disaster response system.",
            "owner": "Security Team",
            "throttle": {
                "profile": "strict",
                "requestsPerMinute": 5,
                "burst": 10
            },
            "expiryDate": null,
            "dataClassification": "internal",
            "risk": "medium"
        },
        {
            "id": "auth-refresh",
            "method": "POST",
            "path": "/auth/refresh",
            "reason": "Token refresh endpoint for session continuity - requires refresh token cookie.",
            "owner": "Security Team",
            "throttle": {
                "profile": "standard",
                "requestsPerMinute": 30,
                "burst": 60
            },
            "expiryDate": null,
            "dataClassification": "internal",
            "risk": "low"
        },
        {
            "id": "auth-forgot-password",
            "method": "POST",
            "path": "/auth/forgot-password",
            "reason": "Password reset request endpoint for account recovery workflow.",
            "owner": "Security Team",
            "throttle": {
                "profile": "strict",
                "requestsPerMinute": 5,
                "burst": 10
            },
            "expiryDate": null,
            "dataClassification": "public",
            "risk": "low"
        },
        {
            "id": "auth-reset-password",
            "method": "POST",
            "path": "/auth/reset-password",
            "reason": "Password reset completion endpoint - uses reset token for verification.",
            "owner": "Security Team",
            "throttle": {
                "profile": "strict",
                "requestsPerMinute": 5,
                "burst": 10
            },
            "expiryDate": null,
            "dataClassification": "public",
            "risk": "low"
        },
        {
            "id": "intake-anonymous",
            "method": "POST",
            "path": "/intake",
            "reason": "Anonymous incident reporting form for public disaster response submissions.",
            "owner": "C2 Team",
            "throttle": {
                "profile": "standard",
                "requestsPerMinute": 10,
                "burst": 20
            },
            "expiryDate": null,
            "dataClassification": "internal",
            "risk": "low"
        }
    ]
}